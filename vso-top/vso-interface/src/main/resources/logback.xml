<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender"
		Threshold="DEBUG">
		<Encoding>GBK</Encoding>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%-20(%d{HH:mm:ss.SSS} [%thread]) %-5level %logger{0} -%msg%n
			</pattern>
		</layout>
	</appender>
	<!-- 所有调用execute类打印日志的配置，编码gbk,按天分割,最多保存1000个文件,级别info -->
	<appender name="vsoExecute"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<Encoding>GBK</Encoding>
		<file>/usr/local/program/vso/interface/logs/vsoExecute.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/usr/local/program/vso/interface/logs/vsoExecute.%d{yyyy-MM-dd}.log.zip
			</fileNamePattern>
			<maxHistory>1000</maxHistory>
		</rollingPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%-20(%d{HH:mm:ss.SSS} [%thread]) %-5level %logger{80}-%msg%n</pattern>
		</layout>
		<!-- 打印日志级别info -->
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
	</appender>
	<!-- 所有调用定时器类打印日志的配置，编码gbk,按天分割,最多保存1000个文件,级别info -->
	<appender name="vsoJob"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<Encoding>GBK</Encoding>
		<file>/usr/local/program/vso/interface/logs/vsoJob.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/usr/local/program/vso/interface/logs/vsoJob.%d{yyyy-MM-dd}.log.zip
			</fileNamePattern>
			<maxHistory>1000</maxHistory>
		</rollingPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%-20(%d{HH:mm:ss.SSS} [%thread]) %-5level %logger{80}-%msg%n</pattern>
		</layout>
		<!-- 打印日志级别info -->
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
	</appender>
	<!-- 所有rabbimq相关打印日志的配置，编码gbk,按天分割,最多保存1000个文件,级别info -->
	<appender name="vsoMq"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<Encoding>GBK</Encoding>
		<file>/usr/local/program/vso/interface/logs/vsoMq.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/usr/local/program/vso/interface/logs/vsoMq.%d{yyyy-MM-dd}.log.zip
			</fileNamePattern>
			<maxHistory>1000</maxHistory>
		</rollingPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%-20(%d{HH:mm:ss.SSS} [%thread]) %-5level %logger{80}-%msg%n</pattern>
		</layout>
		<!-- 打印日志级别info -->
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
	</appender>
	
	
	<!-- com.landhightech.util包下打印日志对应vsoExecute的配置,级别为info -->
	<logger name="com.landhightech.util" level="INFO">
		<appender-ref ref="vsoExecute" />
	</logger>
	<!-- com.landhightech.quartz包下打印日志对应vsoExecute的配置,级别为info -->
	<logger name="com.landhightech.quartz" level="INFO">
		<appender-ref ref="vsoJob" />
	</logger>
	<!-- com.landhightech.rabbimq包下打印日志对应vsoExecute的配置,级别为info -->
	<logger name="com.landhightech.rabbimq" level="INFO">
		<appender-ref ref="vsoMq" />
	</logger>
	<root>
		<level value="INFO" />
		<appender-ref ref="STDOUT" /> 
	</root>


</configuration>